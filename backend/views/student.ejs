<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register As A Student
        </h1>
        <%- include ('./partials/messages') %>
        
        <form action="/register/student" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
            </div>
            <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
            </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
        </div>
        
        <div class="form-group">
            <label for="roll">Roll</label>
            <input
              type="roll"
              id="roll"
              name="roll"
              class="form-control"
              placeholder="Enter Roll No"
              value="<%= typeof roll != 'undefined' ? roll : '' %>"
            />
        </div>

        <div class="form-group">
            <label for="mobile">Mobile</label>
            <input
              type="mobile"
              id="mobile"
              name="mobile"
              class="form-control"
              placeholder="Enter mobile no"
              value="<%= typeof mobile != 'undefined' ? mobile : '' %>"
            />
        </div>
         
        <div class="form-group">
            <label for="branch">Branch</label>
            <input
              type="branch"
              id="branch"
              name="branch"
              class="form-control"
              placeholder="Enter branch"
              value="<%= typeof branch != 'undefined' ? branch : '' %>"
            />
        </div>
        
        <div class="form-group">
            <label for="college">College</label>
            <input
              type="college"
              id="college"
              name="college"
              class="form-control"
              placeholder="Enter College Name"
              value="<%= typeof college != 'undefined' ? college : '' %>"
            />
        </div>

          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>